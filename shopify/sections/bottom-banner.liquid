{%- if section.settings.image != blank -%}
  <div class="block-box pb-0 md:flex justify-center">
    <a href="{{ section.settings.link | default: '#' }}" class="block group basis-7/12 bg-white">
      <img
        src="{{ section.settings.image | image_url: width: 800 }}"
        alt="{{ section.settings.image.alt | default: 'Banner' | escape }}"
        class="duration-300 group-hover:opacity-50"
        width="{{ section.settings.image.width }}"
        height="{{ section.settings.image.height }}"
        loading="lazy"
      >
    </a>
  </div>
{%- endif -%}

{% schema %}
{
  "name": "末尾バナー",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "バナー画像"
    },
    {
      "type": "url",
      "id": "link",
      "label": "リンク先"
    }
  ]
}
{% endschema %}
